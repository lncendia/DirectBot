@model DirectBot.API.ViewModels.Subscribe.AddSubscribeViewModel
@{
    ViewData["Title"] = "Добавление подписки";
}

<div class="row">
    <div class="col-lg-6">
        <h3>Добавить подписку</h3>
        <form asp-action="Add" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="UserId"></label>
                        <input asp-for="UserId" class="form-control"/>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="EndSubscribe"></label>
                        <input asp-for="EndSubscribe" class="form-control"/>
                        <span asp-validation-for="EndSubscribe" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input class="btn shadow-none btn-outline-dark" type="submit" value="Добавить">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>